<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.* ?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>


<HBox spacing="5.0" fx:controller="drawGraph.DrawGraphController" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" styleClass="root">
   <children>
      <Canvas fx:id="dst_canvas" height="300.0" width="300.0">
         <HBox.margin>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </HBox.margin>
      </Canvas>
      <Separator orientation="VERTICAL" prefHeight="200.0" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="40.0">
         <children>
            <Slider fx:id="slider" orientation="VERTICAL" />
            <HBox alignment="CENTER" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button fx:id="sure_btn" mnemonicParsing="false" pickOnBounds="false" text="确认" />
                  <Button fx:id="quit_btn" mnemonicParsing="false" pickOnBounds="false" text="退出" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="5.0" right="5.0" />
         </padding>
         <HBox.margin>
            <Insets left="1.0" />
         </HBox.margin>
      </VBox>
   </children>
	<stylesheets>
		<URL value="@style.css" />
   </stylesheets>
</HBox>
